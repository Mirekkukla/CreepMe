<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/choose_friend_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/choose_friend_button" />

    <ImageView
        android:id="@+id/selector_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/selector_profile_pic_description"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/friend_selector_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_friend_name_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:text="@string/follow_time_text" />
        
    </LinearLayout>
    
        <Button
            android:id="@+id/selector_final_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/selector_final_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gps_enabled_warning"
            android:textSize="10dp"
            android:textStyle="italic" />

</LinearLayout>